page {
  background-color: #f5f5f7;
}
.container {
  padding: 12px;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  margin: 20rpx auto;
  width: 700rpx;
  height: 420rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.card-img {
  width: 100%;
  height: 220rpx;
  object-fit: cover;
}

.card-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.btn-area {
  display: flex;
  justify-content: flex-end;
}

.apply-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: #ffa845;
  color: white;
  line-height: 1;
}

/* 浮动按钮固定到底部右侧 */
.floating-btn {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #ffcb69;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  z-index: 999;
}

.plus {
  color: white;
  font-size: 60rpx;
  line-height: 1;
}
