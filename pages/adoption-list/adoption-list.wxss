page {
  background-color: #f5f5f7;
}

/* 搜索区域样式 */
.header {
  background: linear-gradient(135deg, #fffefc, #fff6e7);
  padding: 24rpx 32rpx;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  width: calc(100% - 48rpx); /* 减去左右margin */
  box-sizing: border-box;
}

.header .title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
  text-align: center;
  letter-spacing: 1.5rpx;
}

.search-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.search-input {
  width: 100%;
  height: 72rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #ffeecb;
  box-sizing: border-box;
}

.btn-group {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
  width: 100%;
  box-sizing: border-box;
}

.search-btn {
  padding: 0 32rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: linear-gradient(to right, #ffb347, #ff914d);
  color: #fff4da;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 145, 77, 0.2);
  transition: all 0.3s ease;
}

.search-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 145, 77, 0.15);
}

.reset-btn {
  padding: 0 32rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: linear-gradient(to right, #fff4da, #ffeecb);
  color: #FF914D;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.reset-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.container {
  padding: 12px;
}

.card {
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  margin: 24rpx auto;
  width: 700rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.12);
}

.card-img {
  width: 100%;
  height: 240rpx;
  object-fit: cover;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}

.card-info {
  flex: 1;
  padding: 24rpx 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #fffaf3;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-top: 4rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.btn-area {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.apply-btn {
  font-size: 26rpx;
  padding: 14rpx 28rpx;
  border-radius: 32rpx;
  font-weight: 600;
  flex: 1;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.apply-btn.detail {
  background: linear-gradient(to right, #ffb347, #ff914d);
  color:  #fff4da;
}

.apply-btn.request {
  background: linear-gradient(to right, #fff4da, #ffeecb); /* 米白渐变 */
  color: #FF914D;
}

/* 浮动按钮固定到底部右侧 */
.floating-btn {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #ffcb69;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  z-index: 999;
}

.plus {
  color: #fff4da;
  font-size: 60rpx;
  line-height: 1;
}
.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(6px); /* 轻微模糊背景 */
}

.modal-box {
  position: relative;
  width: 620rpx;
  max-width: 90vw;
  background: linear-gradient(135deg, #fffefc, #fff6e7);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(255, 168, 69, 0.25);
  animation: fadeIn 0.3s ease forwards;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.modal-header {
  padding: 24rpx 32rpx;
  background: #ffb347;
  color: #fff;
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  letter-spacing: 1.5rpx;
  box-shadow: 0 4rpx 8rpx rgba(255, 180, 70, 0.4);
}

.modal-close {
  position: absolute;
  top: 18rpx;
  right: 18rpx;
  width: 52rpx;
  height: 52rpx;
  background: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 52rpx;
  font-size: 34rpx;
  color: #ff8c00;
  cursor: pointer;
  box-shadow: 0 2rpx 8rpx rgba(255, 140, 0, 0.3);
  transition: all 0.3s ease;
}
.modal-close:hover {
  background: #ff8c00;
  color: #fff;
  box-shadow: 0 0 15rpx #ff8c00;
}

.modal-image {
  width: 100%;
  height: 320rpx;
  object-fit: cover;
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
  box-shadow: inset 0 0 10rpx rgba(255, 180, 70, 0.2);
}

.modal-content {
  padding: 28rpx 32rpx;
  font-size: 30rpx;
  color: #4a4a4a;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  line-height: 1.5;
}

.modal-content text {
  background: #fff7e6;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(255, 180, 70, 0.1);
  font-weight: 500;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 我的领养管理按钮样式 */
.my-adoption-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: linear-gradient(to right, #ffb347, #ff914d);
  color: #fff4da;
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 145, 77, 0.2);
  transition: all 0.3s ease;
}

.my-adoption-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 145, 77, 0.15);
}

.my-adoption-btn .icon {
  font-size: 32rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.status-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  font-weight: 600;
}

.status-tag.success {
  background: linear-gradient(to right, #fff4da, #ffeecb);
  color: #ff914d;
}

.status-tag.info {
  background: linear-gradient(to right, #f5f5f5, #e8e8e8);
  color: #999;
}

.apply-btn.disabled {
  background: #f5f5f5;
  color: #999;
  cursor: not-allowed;
  opacity: 0.7;
}

.reason-input {
  margin-top: 24rpx;
  position: relative;
}

.reason-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.reason-textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  margin-bottom: 8rpx;
}

.word-count {
  position: absolute;
  right: 20rpx;
  bottom: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  min-width: 160rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 36rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.confirm {
  background: linear-gradient(to right, #ffb347, #ff914d);
  color: #fff;
}

.modal-btn.confirm[disabled] {
  background: #f5f5f5;
  color: #999;
  opacity: 0.7;
}
