page {
  background-color: #f5f5f7;
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f7;
}

/* 顶部区域 */
.header {
  background: linear-gradient(135deg, #fffefc, #fff6e7);
  padding: 24rpx 32rpx;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  width: calc(100% - 48rpx);
  box-sizing: border-box;
}

.header .title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
  text-align: center;
  letter-spacing: 1.5rpx;
}

/* 标签页样式 */
.tabs {
  display: flex;
  background: #fff;
  padding: 16rpx;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
  font-weight: 500;
}

.tab.active {
  color: #ff914d;
  font-weight: 600;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(to right, #ffb347, #ff914d);
  border-radius: 2rpx;
}

/* 内容区域 */
.container {
  padding: 12rpx;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  margin: 24rpx auto;
  width: 700rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

/* 添加已领养状态的卡片样式 */
.card.adopted {
  background-color: #f5f5f5;
  opacity: 0.7;
  cursor: not-allowed;
}

.card.adopted .card-info {
  background-color: #f5f5f5;
}

.card.adopted .title,
.card.adopted .type,
.card.adopted .description,
.card.adopted .detail-item {
  color: #999;
}

.card.adopted .status-tag {
  background: linear-gradient(to right, #f5f5f5, #e8e8e8);
  color: #999;
}

.card.adopted .apply-btn {
  background: #f5f5f5;
  color: #999;
  cursor: not-allowed;
  opacity: 0.7;
}

.card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.12);
}

.card-img {
  width: 100%;
  height: 240rpx;
  object-fit: cover;
}

.card-info {
  flex: 1;
  padding: 24rpx 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #fffaf3;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  line-height: 1.3;
}

.type {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin: 12rpx 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.description-label {
  color: #999;
  margin-right: 8rpx;
}

/* 状态标签 */
.status-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  font-weight: 600;
}

.status-tag.success {
  background: linear-gradient(to right, #fff4da, #ffeecb);
  color: #ff914d;
}

.status-tag.info {
  background: linear-gradient(to right, #fff4da, #ffeecb);
  color: #ff914d;
}

.status-tag.warning {
  background: linear-gradient(to right, #fff4da, #ffeecb);
  color: #ff914d;
}

.status-tag.error {
  background: linear-gradient(to right, #fff4da, #ffeecb);
  color: #ff914d;
}

/* 详情信息 */
.details {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-right: 24rpx;
}

.detail-item .icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

.detail-item .label {
  margin-right: 8rpx;
  color: #999;
}

.listing-date {
  display: flex;
  align-items: center;
}

.application-count {
  display: flex;
  align-items: center;
}

.badge {
  background: linear-gradient(to right, #ffb347, #ff914d);
  color: #fff4da;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 24rpx;
  font-weight: 600;
  margin-right: 8rpx;
}

.application-text {
  color: #666;
  font-size: 24rpx;
}

/* 按钮区域 */
.btn-area {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-top: 20rpx;
}

.apply-btn {
  font-size: 26rpx;
  padding: 14rpx 28rpx;
  border-radius: 32rpx;
  font-weight: 600;
  flex: 1;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.apply-btn.delete {
  background: linear-gradient(to right, #fff4da, #ffeecb);
  color: #ff4d4f;
}

.apply-btn.approve {
  background: linear-gradient(to right, #ffb347, #ff914d);
  color: #fff4da;
}

.apply-btn.reject {
  background: linear-gradient(to right, #fff4da, #ffeecb);
  color: #ff4d4f;
}

.apply-btn.cancel {
  background: linear-gradient(to right, #fff4da, #ffeecb);
  color: #ff914d;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #ff914d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-data .icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  color: #ff914d;
} 