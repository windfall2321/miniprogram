<view class="container">
  <view class="login-box">
    <view class="title">登录</view>
    <view class="input-group">
      <input 
        class="input" 
        placeholder="请输入用户名" 
        bindinput="onUsernameInput"
        value="{{username}}"
      />
      <input 
        class="input" 
        placeholder="请输入密码" 
        password 
        bindinput="onPasswordInput"
        value="{{password}}"
      />
    </view>
    <view class="btn-group">
      <button class="btn login-btn" bindtap="handleLogin">登录</button>
      <button class="btn register-btn" bindtap="goToRegister">注册账号</button>
    </view>
  </view>
</view> 