.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-box {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.form-group {
  margin-bottom: 40rpx;
}

.input-group {
  display: flex;
  align-items: center;
  background: #f5f7fa;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
}

.input-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #666;
}

.input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

.btn-group {
  margin-bottom: 40rpx;
}

.login-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  font-size: 32rpx;
  padding: 24rpx 0;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  border: none;
  box-shadow: 0 4rpx 10rpx rgba(76, 175, 80, 0.2);
}

.register-btn {
  background: white;
  color: #4CAF50;
  font-size: 32rpx;
  padding: 24rpx 0;
  border-radius: 16rpx;
  border: 2rpx solid #4CAF50;
}

.other-login {
  margin-top: 60rpx;
}

.divider {
  position: relative;
  text-align: center;
  margin-bottom: 40rpx;
}

.divider::before,
.divider::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 30%;
  height: 2rpx;
  background: #eee;
}

.divider::before {
  left: 0;
}

.divider::after {
  right: 0;
}

.divider-text {
  background: white;
  padding: 0 20rpx;
  color: #999;
  font-size: 24rpx;
}

.social-login {
  display: flex;
  justify-content: center;
  gap: 60rpx;
}

.social-item {
  text-align: center;
}

.social-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 10rpx;
}

.social-text {
  font-size: 24rpx;
  color: #666;
} 