page {
  background-color: #f5f5f7;
  min-height: 100vh;
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.container {
  padding: 24rpx;
  height: 100%;
  box-sizing: border-box;
  background-color: #f5f5f7;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.header {
  background: linear-gradient(135deg, #fffefc, #fff6e7);
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  flex-shrink: 0;
  width: calc(100% - 48rpx); /* 减去左右margin */
  box-sizing: border-box;
}

.header .title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  letter-spacing: 1.5rpx;
}

.form-container {
  background: linear-gradient(135deg, #fffefc, #fff6e7);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  width: calc(100% - 48rpx); /* 减去左右margin */
  box-sizing: border-box;
  margin: 0 auto;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  flex: 1;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 4rpx;
}

input, .picker {
  height: 72rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #ffeecb;
}

.picker.placeholder {
  color: #999;
}

.radio-group {
  display: flex;
  gap: 32rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.textarea {
  width: 100%;
  height: 240rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #ffeecb;
  box-sizing: border-box;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.upload-container {
  width: 100%;
  height: 320rpx;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #ffeecb;
}

.image-preview {
  width: 100%;
  height: 100%;
  position: relative;
}

.image-preview image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-btn {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  background: #fafafa;
}

.upload-icon {
  font-size: 64rpx;
  color: #999;
  line-height: 1;
}

.upload-text {
  font-size: 28rpx;
  color: #999;
}

.submit-area {
  margin-top: 48rpx;
  padding: 0;
  flex-shrink: 0;
  margin-bottom: env(safe-area-inset-bottom);
  width: 100%;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(to right, #ffb347, #ff914d);
  color: #fff4da;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 145, 77, 0.2);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 145, 77, 0.15);
}
