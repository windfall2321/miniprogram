/* edit-profile.wxss */
.page-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 20rpx;
}

.header {
  padding: 30rpx 0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content {
  padding: 20rpx;
}

/* 头像区域样式 */
.avatar-section {
  display: flex;
  justify-content: center;
  margin: 40rpx 0;
}

.avatar-wrapper {
  text-align: center;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.avatar-actions {
  margin-top: 20rpx;
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.upload-btn, .delete-btn {
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  border: none;
  background-color: #4CAF50;
  color: white;
}

.delete-btn {
  background-color: #ff4d4f;
}

/* 表单区域样式 */
.form-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

/* 按钮区域样式 */
.button-section {
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #4CAF50;
  color: white;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 4rpx 10rpx rgba(76, 175, 80, 0.2);
}

.save-btn:active {
  opacity: 0.8;
} 